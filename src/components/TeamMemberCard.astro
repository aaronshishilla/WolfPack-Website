---
import type { WPTeamMember } from "@/types/wordpress";

interface Props {
  member: WPTeamMember;
}

const { member } = Astro.props;
const fields = member.teamMemberFields;
const photo = fields?.headshot?.sourceUrl || member.featuredImage?.node?.sourceUrl;
---

<div class="bg-white rounded-lg shadow-sm overflow-hidden text-center hover:shadow-md transition-shadow">
  {photo && (
    <img
      src={photo}
      alt={fields?.headshot?.altText || member.title}
      class="w-full h-64 object-cover"
      loading="lazy"
    />
  )}
  <div class="p-6">
    <h3 class="text-lg font-bold text-[var(--color-brand-dark)]">{member.title}</h3>
    {fields?.role && (
      <p class="text-sm text-[var(--color-brand-accent)] font-medium mt-1">{fields.role}</p>
    )}
    {fields?.bio && (
      <p class="text-sm text-gray-600 mt-3 line-clamp-3">{fields.bio}</p>
    )}
    <div class="mt-4 flex justify-center space-x-4">
      {fields?.linkedin && (
        <a
          href={fields.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-400 hover:text-[var(--color-brand-primary)] transition-colors"
          aria-label={`${member.title} on LinkedIn`}
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
          </svg>
        </a>
      )}
      {fields?.email && (
        <a
          href={`mailto:${fields.email}`}
          class="text-gray-400 hover:text-[var(--color-brand-primary)] transition-colors"
          aria-label={`Email ${member.title}`}
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </a>
      )}
    </div>
  </div>
</div>
