---
const currentYear = new Date().getFullYear();

const footerLinks = {
  company: [
    { label: "About", href: "/about" },
    { label: "Our Team", href: "/team" },
    { label: "Careers", href: "/careers" },
    { label: "Contact", href: "/contact" },
  ],
  services: [
    { label: "Strategy Consulting", href: "/services" },
    { label: "Growth Advisory", href: "/services" },
    { label: "Operational Excellence", href: "/services" },
    { label: "Case Studies", href: "/case-studies" },
  ],
  resources: [
    { label: "Blog", href: "/blog" },
    { label: "Privacy Policy", href: "/privacy-policy" },
    { label: "Terms of Service", href: "/terms" },
  ],
};
---

<footer class="relative bg-[var(--color-brand-dark)] text-gray-400 mt-0 overflow-hidden">
  <!-- Decorative top border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-[var(--color-brand-accent)] to-transparent"></div>

  <!-- Background grid -->
  <div class="absolute inset-0 decorative-grid opacity-50"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main footer content -->
    <div class="py-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-4">
        <div class="flex items-center space-x-2 mb-6">
          <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-[var(--color-brand-accent)] to-[var(--color-brand-accent-light)] flex items-center justify-center">
            <span class="text-white font-extrabold text-lg">W</span>
          </div>
          <span class="text-xl font-bold text-white">WolfPack Advising</span>
        </div>
        <p class="text-sm leading-relaxed max-w-xs mb-8">
          Strategic consulting and advisory services that transform businesses through data-driven insights and hands-on guidance.
        </p>
        <div class="flex space-x-3">
          <a href="#" class="w-10 h-10 rounded-lg bg-white/5 flex items-center justify-center hover:bg-[var(--color-brand-accent)]/20 hover:text-[var(--color-brand-accent)] transition-all duration-300" aria-label="LinkedIn">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
          <a href="#" class="w-10 h-10 rounded-lg bg-white/5 flex items-center justify-center hover:bg-[var(--color-brand-accent)]/20 hover:text-[var(--color-brand-accent)] transition-all duration-300" aria-label="Twitter">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
        </div>
      </div>

      <!-- Company Links -->
      <div class="lg:col-span-2 lg:col-start-6">
        <h3 class="text-white text-sm font-semibold uppercase tracking-wider mb-6">Company</h3>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-sm hover:text-white transition-colors duration-200 hover:translate-x-1 inline-block">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services Links -->
      <div class="lg:col-span-3">
        <h3 class="text-white text-sm font-semibold uppercase tracking-wider mb-6">Services</h3>
        <ul class="space-y-3">
          {footerLinks.services.map((link) => (
            <li>
              <a href={link.href} class="text-sm hover:text-white transition-colors duration-200 hover:translate-x-1 inline-block">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources Links -->
      <div class="lg:col-span-3">
        <h3 class="text-white text-sm font-semibold uppercase tracking-wider mb-6">Resources</h3>
        <ul class="space-y-3">
          {footerLinks.resources.map((link) => (
            <li>
              <a href={link.href} class="text-sm hover:text-white transition-colors duration-200 hover:translate-x-1 inline-block">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-white/10 py-8 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-gray-500">
        &copy; {currentYear} WolfPack Advising. All rights reserved.
      </p>
      <div class="flex items-center space-x-6 text-sm text-gray-500">
        <a href="/privacy-policy" class="hover:text-white transition-colors">Privacy</a>
        <a href="/terms" class="hover:text-white transition-colors">Terms</a>
      </div>
    </div>
  </div>
</footer>
