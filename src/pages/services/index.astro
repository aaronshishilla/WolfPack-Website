---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ServiceCard from "@/components/ServiceCard.astro";
import { getServices } from "@/lib/wordpress";
import type { WPService } from "@/types/wordpress";

let services: WPService[] = [];

try {
  services = await getServices();
} catch {
  // WordPress unavailable
}
---

<BaseLayout
  title="Services | WolfPack Advising"
  description="Explore our consulting and advisory services designed to accelerate your business growth."
>
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-[var(--color-brand-dark)] mb-2">Our Services</h1>
      <p class="text-gray-600 mb-12 max-w-2xl">
        We offer a range of consulting services tailored to your business needs.
      </p>

      {services.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {services.map((service) => (
            <ServiceCard service={service} />
          ))}
        </div>
      ) : (
        <div class="text-center py-16 text-gray-500">
          <p class="text-lg">Services coming soon.</p>
          <p class="text-sm mt-2">
            Service pages will appear here once the Services custom post type is configured in WordPress.
          </p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
